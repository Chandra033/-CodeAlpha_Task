      transform: translateY(-4px);
    }
    .stats-value {
      font-size: 1.7rem;
      font-weight: 600;
    }
    .fade-in {
      animation: fadeIn 0.6s ease-in-out;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
